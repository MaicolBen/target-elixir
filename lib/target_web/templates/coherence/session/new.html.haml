.login-container
  %section.login-side
    .home-menu
      .home-close-button
        %a="X"
      .home-links
        %a="ABOUT"
        %a="CONTACT"
    .home-introduction
      = img_tag(static_path(@conn, "/images/smilies.svg"))
      %h1.home-title="TARGET MVD"
      %h3.home-subtitle="Find people near you & Connect"
      %p.home-description="Create a target  wherever on the map, specify your interest: Travel, Dating, Music, etc and start conecting with others who share your interest."
    .login-form
      %br
      - form_for @conn, session_path(@conn, :create), [as: :session], fn f  ->

        - login_field = Coherence.Config.login_field
        .form-group
          = label f, login_field, class: "control-label"
          = text_input f, login_field, class: "login-field", required: ""
          = error_tag f, login_field

        .form-group
          = label f, dgettext("coherence", "Password"), class: "control-label"
          = password_input f, :password, class: "login-field", required: ""
          = error_tag f, :password


        .form-group.login-form-group-submit
          = submit dgettext("coherence", "Sign In"), class: "button-primary"
          = link dgettext("coherence", "Forgot your password?"), to: password_path(@conn, :new), class: "btn"

        .signup-links
          %a.facebook{href="/auth/facebook/"}="Connect with Facebook"
          %hr
          %a.signup="Sign up"
  %section.mobile-promo
    = img_tag(static_path(@conn, "/images/mobile-promo.png"))
